# ==============================================================================
# MAUTIC STACK - ENVIRONMENT VARIABLES
# ==============================================================================

# Compose Project Name (evita colisão de volumes/redes)
COMPOSE_PROJECT_NAME=mautic-stack

# ------------------------------------------------------------------------------
# MAUTIC CONFIGURATION
# ------------------------------------------------------------------------------
MAUTIC_PORT=8080
MAUTIC_URL=http://localhost:8080

# Admin Inicial (criado automaticamente via CLI)
MAUTIC_ADMIN_USERNAME=admin
MAUTIC_ADMIN_EMAIL=admin@example.com
MAUTIC_ADMIN_PASSWORD=ChangeMe123!
MAUTIC_ADMIN_FIRSTNAME=Admin
MAUTIC_ADMIN_LASTNAME=User

# ------------------------------------------------------------------------------
# DATABASE CONFIGURATION (MySQL 8.0)
# ------------------------------------------------------------------------------
MYSQL_ROOT_PASSWORD=rootpass_change_me
MYSQL_DATABASE=mautic
MYSQL_USER=mautic
MYSQL_PASSWORD=mauticpass_change_me

# ------------------------------------------------------------------------------
# CACHE CONFIGURATION (Redis 7)
# ------------------------------------------------------------------------------
# Deixe vazio se não quiser senha no Redis (não recomendado)
REDIS_PASSWORD=redispass_change_me

# ------------------------------------------------------------------------------
# DOMAIN & NGINX (Opcional - usado pelo scripts/nginx_setup.sh)
# ------------------------------------------------------------------------------
USE_DOMAIN=false
DOMAIN=mautic.example.com
SSL_EMAIL=admin@example.com
